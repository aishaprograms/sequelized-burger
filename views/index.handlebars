<div class="row">
	<div class="col-md-4">
		<h2>Burgers To Eat</h2>
		<hr>
		<ol>
		  {{#each burgers}}
		    {{#unless this.devoured}}
		      <li>
		        <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
		        {{this.burger_name}}
		          <input type="hidden" name="devoured" value="false">
		          <button class="btn btn-xs btn-success" type="submit">Devour it!</button>
		        </form>
		      </li>
		    {{/unless}}
		  {{/each}}
		</ol>
	</div>
	<div class="col-md-4">
		<h2>Burgers I've Eaten</h2>
		<hr>
		<ol>
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			        {{this.burger_name}}
			      </li>
			    {{/if}}
			  {{/each}}
		</ol>
	</div>
	<div class="col-md-4">
		<h2>More Burgers</h2>
		<hr>
		<form action="/" method="POST">
		  <div class="form-group">
		    <label for="burger_name">Name:</label>
		    <input type="text" id="burger_name" name="burger_name" required>
		  </div>
		  <button class="btn btn-success" type="submit">Submit</button>
		</form>
	</div>
</div>
